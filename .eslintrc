{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["airbnb", "prettier", "prettier/react", "plugin:import/warnings"],
  "plugins": ["prettier", "import", "flowtype"],
  "globals": {
    "document": true,
    "window": true,
    "CDN_URL": true,
    "process": true,
    "fetch": false,
    "ANALYTICS_TRACKING_ID": false,
    "AUTH0_CLIENT_ID": false,
    "AUTH0_DOMAIN": false,
    "GRAPHQL_ENDPOINT": false,
    "NEWSLETTER_FORM_ACTION": false,
    "NEWSLETTER_FORM_INPUT_NAME": false,
    "ON_PRODUCTION": true,
    "$Diff": true
  },
  "rules": {
    "experimentalDecoratos": true,
    "prettier/prettier": "error",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "quotes": ["error", "double"],
    "comma-dangle": "off",
    "indent": "off",
    "no-mixed-operators": "off",
    "arrow-parens": "off",
    "no-confusing-arrow": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "prefer-template": "off",
    "jsx-a11y/accessible-emoji": "off",
    "react/forbid-prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "no-unused-expressions": ["error", { "allowTaggedTemplates": true }],
    "react/no-unused-prop-types": 0,
    "consistent-return": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "import/no-extraneous-dependencies": 0,
    "flowtype/define-flow-type": 1,
    "radix": "off",
    "no-param-reassign": "off"
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
